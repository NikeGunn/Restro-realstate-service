# Environment Configuration
# Copy this file to .env and fill in the values

# Django
DEBUG=True
SECRET_KEY=django-insecure-dev-key-change-in-production-with-secure-key
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
POSTGRES_DB=chatplatform
POSTGRES_USER=chatplatform
POSTGRES_PASSWORD=chatplatform123

# Redis
REDIS_URL=redis://redis:6379/0

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here

# Meta (WhatsApp & Instagram) - OPTIONAL
# Only needed if you want to use WhatsApp Business API or Instagram DM automation
# All Meta services are FREE - you just need a Meta Developer account

# Get these from: https://developers.facebook.com/apps/
# Meta App Secret (found in App Settings > Basic)
META_APP_SECRET=your_meta_app_secret_here

# Meta Graph API Version (leave as v18.0 unless you know what you're doing)
META_GRAPH_API_VERSION=v18.0

# Verify Tokens (create your own random strings)
# These are used to verify webhook requests from Meta
# You'll enter the SAME tokens in Meta Developer Console when setting up webhooks
WHATSAPP_DEFAULT_VERIFY_TOKEN=my_whatsapp_verify_token_change_me
INSTAGRAM_DEFAULT_VERIFY_TOKEN=my_instagram_verify_token_change_me

# IMPORTANT NOTES:
# 1. WhatsApp Business API is FREE (1000 conversations/month included)
# 2. Instagram API is completely FREE
# 3. You configure your actual credentials in the dashboard UI, not here
# 4. These .env values are just fallbacks for webhook verification
# 5. Each organization can have different WhatsApp/Instagram credentials

# Frontend
VITE_API_URL=http://localhost:8000/api
